
{
    "compilerOptions": {
        "baseUrl": "./",
        "sourceMap": true,
        "outDir": "./build",
        "skipLibCheck": true,
        "downlevelIteration": true,
        "paths": {
            "src/*" : [
                "./src/*"
            ]
        }
    },
    "include": [ "src/**/*.ts" ],
     "esModuleInterop": true,
     "exclude": [
        "./node_modules/**/*",
         "./build/**/*",
    ]
}

{
    "compilerOptions": {
        "baseUrl": "./",
        "sourceMap": true,
        "outDir": "./build",
        "skipLibCheck": true,
        "downlevelIteration": true,
        "paths": {
            "src/*" : [
                "./src/*"
            ]
        }
    },
    "include": [ "src/**/*.ts" ],
     "esModuleInterop": true,
     "exclude": [
        "node_modules",
        "./build/**/*",
        "./node_modules",
        "./node_modules/*",
        "./node_modules/@types/node/index.d.ts",
    ]
}